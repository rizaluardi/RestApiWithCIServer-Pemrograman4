<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_Instansi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activityserver.EditActivityInstansi">
    <TextView
        android:id="@+id/tvIdInstansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Kontak : "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvInstansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instansi : "
        android:layout_below="@id/tvIdInstansi"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telepon : "
        android:layout_below="@id/tvInstansi"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edtIdInstansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id"
        android:layout_toRightOf="@+id/tvIdInstansi"
        android:layout_alignBaseline="@+id/tvIdInstansi"/>
    <EditText
        android:id="@+id/edtInstansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Instansi"
        android:layout_alignBaseline="@+id/tvInstansi"
        android:layout_alignLeft="@+id/edtIdInstansi"/>
    <EditText
        android:id="@+id/edtTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Telepon"
        android:layout_alignBaseline="@+id/tvTelepon"
        android:layout_alignLeft="@+id/edtIdInstansi"
        android:inputType="date"/>
    <LinearLayout
        android:id="@+id/LinearlayoutInstansii2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvTelepon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btUpdateInstansii2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDeleteInstansii2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBackGoInstansii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>
</RelativeLayout>